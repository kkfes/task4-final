<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>FitTrack</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <h1>FitTrack</h1>
      <nav>
        <% if (currentUser) { %>
          <a href="/create">Create Workout</a>
          <a href="/auth/logout">Logout</a>
        <% } else { %>
          <a href="/auth/login">Login</a>
          <a href="/auth/signup">Sign up</a>
        <% } %>
      </nav>
    </header>

    <main>
      <div class="hero" style="max-width:1100px;margin:0 auto 18px">
        <div>
          <h2 style="margin:0">Workouts</h2>
          <p class="muted">Your recent training sessions â€” create, edit and track workouts.</p>
        </div>
        <div>
          <% if (currentUser) { %>
            <a class="button" href="/create">New Workout</a>
          <% } %>
        </div>
      </div>

      <div class="card">
        <div id="list">
          <table id="workouts-table">
            <thead>
              <tr><th>Name</th><th>Type</th><th>Duration</th><th>Calories</th><th>Intensity</th><th>Date</th><th>Actions</th></tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script>
      const CURRENT_USER = <%- JSON.stringify(currentUser || null) %>;
    </script>
    <script src="/script.js"></script>
  </body>
</html>
